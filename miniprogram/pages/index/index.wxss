/** 页面整体容器 **/
.page-container {
  /* 建议用与设计图相近的淡黄色或淡粉背景 */
  background-color: #fff4d5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/** 顶部Banner区域 **/
