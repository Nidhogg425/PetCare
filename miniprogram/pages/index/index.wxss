/** 左侧标题 + 评分 **/
.banner-content {
  position: absolute;
  left: 20rpx;
  right: 0;
  top: 80rpx; /* 根据效果来定位 */
  text-align: left;
}

.app-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}

.rating {
  margin-left: 8rpx;
  font-size: 28rpx;
  color: #ffd700; /* 金色星标 */
}

/** 头像占位 **/
.avatar-placeholder {
  width: 120rpx;
  height: 120rpx;
  background-color: #ffd5e5; /* 淡粉色 */
  border-radius: 50%;
  border: 4rpx solid #fff;
}

/** 服务区域 **/
.service-row {
  margin-top: 30rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
}

.service-box {
  width: 45%;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.emoji {
  font-size: 40rpx;
}

.service-title {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.book-btn {
  margin-top: 16rpx;
  background-color: #ffd400;
  color: #000;
  padding: 10rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: none;
}

/** 累计服务宠物数 **/
.stats {
  margin-top: 40rpx;
  text-align: center;
}

.desc {
  font-size: 24rpx;
  color: #666;
}

.number {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #e94f4f;
  margin: 10rpx 0;
}

/** 三个功能入口 **/
.features {
  margin-top: 30rpx;
  width: 90%;
  display: flex;
  justify-content: space-between;
}

.feature-box {
  width: 30%;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 8rpx rgba(0,0,0,0.1);
  text-align: center;
  padding: 20rpx;
}

.feature-icon {
  font-size: 40rpx;
}

.feature-title {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #333;
}
/* 在原有样式基础上添加以下样式 */
.user-info {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.nickname {
  color: #fff;
  font-size: 28rpx;
}

.login-btn {
  margin-top: 20rpx;
  background-color: #fff;
  color: #333;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.service-price {
  color: #e94f4f;
  font-size: 24rpx;
  margin-top: 8rpx;
}

/* 修改原有的 top-banner 样式 */
.top-banner {
  background: linear-gradient(to right, #ff9a9e 0%, #fad0c4 100%);
  padding-bottom: 40rpx;
}

